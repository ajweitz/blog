<h3>Post a Comment</h3>

<%= form_for [ @article, @comment ] do |f| %>
  <p>
    <%= f.label :author_name, "Your Name:" %><br/>
    <%= f.text_field :author_name , class: "input_area"%>
  </p>
  <p>
    <%= f.label :body, "Your Comment:" %><br/>
    <%= f.text_area :body , class: "input_area"%>
  </p>
  <p>
    <%= f.submit 'Submit' , id: "submit", class: "input_area"%>
  </p>
<% end %>